<Window x:Class="AzureStorageBlob.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzureStorageBlob"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<Button x:Name="buttonCreateBlobContainer" Content="Blob Containerの作成" HorizontalAlignment="Left" Height="28" Margin="30,19,0,0" VerticalAlignment="Top" Width="438" Click="buttonCreateBlobContainer_Click"/>
		<Button x:Name="buttonGetBlobList" Content="コンテナー内の BLOB を一覧表示する" HorizontalAlignment="Left" Height="25" Margin="30,52,0,0" VerticalAlignment="Top" Width="438" Click="buttonGetBlobList_Click"/>
		<Button x:Name="buttonAddAppendBlob" Content="追加 Blobへの書き込み" HorizontalAlignment="Left" Height="27" Margin="30,82,0,0" VerticalAlignment="Top" Width="438" Click="buttonAddAppendBlob_Click"/>
		<Button x:Name="buttonAddBlobLargeFile" Content="追加 Blobへの書き込み（92MBのムービー）" HorizontalAlignment="Left" Height="26" Margin="30,114,0,0" VerticalAlignment="Top" Width="438" Click="buttonAddBlobLargeFile_Click"/>

	</Grid>
</Window>
